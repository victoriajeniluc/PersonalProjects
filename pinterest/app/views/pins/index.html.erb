<p id="notice"><%= notice %></p>

<div class = "row pinterest-grid">
  <% @pins.each do |pin| %>
    <div class = "col-md-5 pin-item">
      <div class ="card card-default pin">
        <div class="card-body">
          <%= link_to pin_path(pin) do %>
            <%= image_tag pin.image, style: 'height:100%;width:auto;'%>
          <% end %>   
        </div>
        <div class ="panel-footer"> 
          <p><%= pin.title %></p>
            <div><%= link_to 'Edit', edit_pin_path(pin) %> | <%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
        </div>
      </div>
    </div>
  <% end %> 
</div>





