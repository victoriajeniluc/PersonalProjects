<p id="notice"><%= notice %></p>

<div class = "row">
  <% @pins.each do |pin| %>
    <div class = "col-md-3">
      <div class = "pin">
        <%= link_to pin_path(pin) do %>
          <%= image_tag pin.image, size: "250x350", class: "img_responsive"%>
        <% end %> 
        <p><%= pin.title %></p>
        <div><%= link_to 'Edit', edit_pin_path(pin) %> | <%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  <% end %> 
</div>





